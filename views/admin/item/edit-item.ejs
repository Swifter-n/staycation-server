<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="pills-profile-tab">
    <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="formGroupExampleInput">Title</label>
          <input type="text" class="form-control" name="title" id="title" value="<%= item.title %>" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Price</label>
          <input type="text" class="form-control" id="price" value="<%= item.price %>" name="price"  placeholder="Enter Price">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">City</label>
            <input type="text" class="form-control" id="city" name="city" value="<%= item.city %>" placeholder="Enter City">
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Category</label>
            <select class="custom-select" name="categoryId">
                <option value="<%= item.categoryId._id %>" selected>---<%= item.categoryId.name %>---</option>
                <% for(let i = 0; i < category.length; i++){%>
                <option value="<%= category[i].id %>"><%=category[i].name %></option>
                <% }%>
              </select>
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2">Image</label>
            <div class="custom-file">
                <input type="file" class="form-control" id="image" name="image" multiple>
              </div>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Description</label>
            <textarea class="form-control" id="about" name="about" rows="30"><%= item.description %></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Save</button>
      </form>
</div>

