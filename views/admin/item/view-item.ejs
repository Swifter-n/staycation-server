<%- include('../../partials/header.ejs') %>
<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">
    <%- include('../../partials/sidebar.ejs'); %>
    

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">
<%- include('../../partials/navbar.ejs'); %>

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <%- include('../../partials/message.ejs'); %>
          <!-- Page Heading -->
          <h1 class="h3 mb-4 text-gray-800">Items</h1>
          <% if(action == 'view'){ %>
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
              <li class="nav-item" role="presentation">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Show Item</a>
              </li>
              <li class="nav-item" role="presentation">
                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Add Item</a>
              </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
              <%- include('./table-items.ejs');%>
              <%- include('./add-item.ejs');%>
            </div>
            <%} else if(action == 'show image'){%>
              <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                  <a class="nav-link active" id="show-image" data-toggle="pill" href="#show-image" role="tab" aria-controls="pills-home" aria-selected="true">Show Image</a>
                </li>
  
              </ul>
              <div class="tab-content" id="pills-tabContent">
                <%- include('./show-image.ejs');%>
              </div>
              <% }else{%>
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                  <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="edit-item" data-toggle="pill" href="#edit-item" role="tab" aria-controls="pills-home" aria-selected="true">Edit Item</a>
                  </li>
    
                </ul>
                <div class="tab-content" id="pills-tabContent">
                  <%- include('./edit-item.ejs');%>
                </div>
              <% } %>
        </div>
       


        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

     <%- include('../../partials/footer.ejs'); %>

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>

