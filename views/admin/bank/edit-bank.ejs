<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Update Bank</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form method="POST" action="/admin/bank?_method=PUT" enctype="multipart/form-data">
        <div class="modal-body">  
            <div class="form-group">
              <label for="exampleInputName1">Name Bank:</label>
              <input type="text" class="form-control nameBank" name="nameBank" id="exampleInput1" placeholder="Enter Bank" required>
            </div>
            <div class="form-group">
              <label for="exampleInputName1">No. Rekening:</label>
              <input type="text" class="form-control nomorRekening" name="nomorRekening" id="exampleInput1" placeholder="Enter No. Rekening" required>
            </div>
            <div class="form-group">
              <label for="exampleInputName1">Name:</label>
              <input type="text" class="form-control names" name="name" id="exampleInput1" placeholder="Enter Name" required>
            </div>
            <div class="form-group">
                <label for="exampleInputName1">Foto Stuck Transfer:</label>
                <input type="file" class="form-control" name="image" id="exampleInput1">
                <span>Choose picture to update image</span>
              </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="id" class="id"/>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
      </div>
    </div>
  </div>